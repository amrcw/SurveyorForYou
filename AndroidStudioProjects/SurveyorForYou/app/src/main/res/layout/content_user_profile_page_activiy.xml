<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_user_profile_page_activiy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="uk.co.surveyorforyou.surveyorforyou.UserProfilePageActiviy"
    tools:showIn="@layout/app_bar_user_profile_page_activiy"
    android:background="@android:color/holo_blue_light">

    <TextView
        android:layout_width="0dp"
        android:layout_height="95dp"
        android:id="@+id/txtNameTitle"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@+id/imgProfile"
        android:layout_marginLeft="16dp"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textSize="25sp" />

    <ImageView
        android:layout_width="249dp"
        android:layout_height="270dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imgProfile"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtProfEmail"
        app:layout_constraintLeft_toRightOf="@+id/imgProfile"
        android:textAlignment="textStart"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/txtNameTitle"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@+id/imgProfile"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtProfEmail"
        android:id="@+id/path" />
</android.support.constraint.ConstraintLayout>
