<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_profile_acivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uk.co.surveyorforyou.surveyorforyou.UserProfileAcivity">

    <EditText
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtFname"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="88dp"
        app:layout_constraintTop_toBottomOf="@+id/txtWelcome" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtEmail"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        app:layout_constraintHorizontal_bias="0.54"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txtFname" />

    <TextView
        android:text="Surveyors Profile Page"
        android:layout_width="768dp"
        android:layout_height="68dp"
        android:id="@+id/txtWelcome"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="96dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.58" />

</android.support.constraint.ConstraintLayout>
