<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="uk.co.surveyorforyou.surveyorforyou.PropertiesFragment">

    <!-- TODO: Update blank fragment layout -->


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <EditText
        android:id="@+id/refSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:inputType="textNoSuggestions"
        android:layout_marginTop="10dp"
        android:hint="Search By Name"
        android:background="@drawable/searchtextdesign"
        android:drawableLeft="@android:drawable/ic_search_category_default"
        android:drawableRight="@drawable/ic_clear_black_24dp"
        android:layout_marginBottom="10dp"
        android:paddingRight="5dp" />

    <EditText
        android:id="@+id/refJobNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textNoSuggestions"
        android:layout_below="@+id/refPostcode"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Search By Postcode"
        android:drawableRight="@drawable/ic_clear_black_24dp"
        android:background="@drawable/searchtextdesign"
        android:drawableLeft="@android:drawable/ic_search_category_default"
        android:paddingRight="5dp" />

    <EditText
        android:id="@+id/refPostcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textNoSuggestions"
        android:hint="Search By JobID"
        android:drawableLeft="@android:drawable/ic_search_category_default"
        android:layout_below="@+id/refSearch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:drawableRight="@drawable/ic_clear_black_24dp"
        android:background="@drawable/searchtextdesign"
        android:layout_marginBottom="10dp"
        android:paddingRight="5dp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listview"
        android:layout_below="@+id/refJobNum"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp">

    </ListView>




</RelativeLayout>

</FrameLayout>
